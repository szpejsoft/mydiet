<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/minusBtn"
        android:layout_width="@dimen/default_size"
        android:layout_height="match_parent"
        android:background="@drawable/number_edit_minus_btn_background"
        android:gravity="center"
        android:text="-"
        android:textSize="@dimen/text_large"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/numberTxt"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/number_edit_value_background"
        android:gravity="center"
        android:textSize="@dimen/text_large"
        tools:text="7" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/plusBtn"
        android:layout_width="@dimen/default_size"
        android:layout_height="match_parent"
        android:background="@drawable/number_edit_plus_btn_background"
        android:gravity="center"
        android:text="+"
        android:textSize="@dimen/text_large"
        android:textStyle="bold" />


</LinearLayout>
